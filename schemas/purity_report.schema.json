{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://latency.vision/schemas/purity_report.schema.json",
  "title": "Latency Vision Purity Report",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "sandbox_mode",
    "command",
    "returncode",
    "network_syscalls",
    "offending"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\d+\.\d+\.\d+(?:[-+][A-Za-z0-9.]+)?$"
    },
    "sandbox_mode": {
      "type": "string",
      "enum": ["unshare", "strace-only"]
    },
    "command": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^.+$"
      },
      "minItems": 1
    },
    "returncode": {
      "type": "integer",
      "minimum": -2147483648,
      "maximum": 2147483647
    },
    "network_syscalls": {"type": "boolean"},
    "offending": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["event", "detail"],
        "properties": {
          "event": {
            "type": "string",
            "pattern": "^.+$"
          },
          "detail": {
            "type": "string",
            "pattern": "^.+$"
          }
        }
      }
    }
  }
}
