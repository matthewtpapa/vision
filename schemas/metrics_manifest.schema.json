{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://latency.vision/schemas/metrics_manifest.schema.json",
  "title": "Latency Vision Metrics Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "entries"],
  "properties": {
    "schema_version": {
      "type": "string"
    },
    "entries": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "sha256"],
        "properties": {
          "path": {
            "type": "string",
            "pattern": "^(?!/)(?!.*//)(?!.*\\\\)(?!.*\\.{2})([A-Za-z0-9_.-]+/)*[A-Za-z0-9_.-]+$"
          },
          "sha256": {
            "type": "string",
            "pattern": "^[0-9a-f]{64}$"
          }
        }
      }
    }
  }
}
